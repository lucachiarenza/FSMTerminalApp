<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="FSMTerminalApp.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Home">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">

            <!-- Header -->
            <Label x:Name="WelcomeLabel"
                   Text="Gestione Magazzino"
                   FontSize="32"
                   HorizontalOptions="Center" 
                   TextColor="{StaticResource PrimaryColor}" />

            <!-- Informazioni -->
            <Frame BackgroundColor="{StaticResource Gray100}" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Applicazione per la gestione del magazzino"
                           FontSize="18"
                           FontAttributes="Bold" />
                    <Label Text="Funzionalità disponibili:" />
                    <Label Text="• Vendite" />
                    <Label Text="• Movimenti di magazzino" />
                    <Label Text="• Gestione resi" />
                    <Label Text="• Inventario" />
                </VerticalStackLayout>
            </Frame>

            <!-- Pulsante Continua -->
            <Button x:Name="ContinueButton"
                    Text="CONTINUA"
                    Clicked="OnContinueClicked"
                    HorizontalOptions="Center"
                    BackgroundColor="{StaticResource PrimaryColor}"
                    TextColor="White"
                    WidthRequest="200" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>